const quickSort = arr => {
    if(arr.length <= 1) {
        return arr;
    }
    const pivotIndex = Math.floor(arr.length / 2); //重要！！   算法思路中第一步 基准为位置 理论上可以任选
    const pivot = arr[pivotIndex];
    const left = [];
    const right = [];
    arr.forEach(() => {
        if(arr[i] < pivot) {
            left.push(arr[i])
        }else {
            right.push(arr[i])
        }
    })
    return quickSort(left).concat([pivot], quickSort(right)); //连接 左数组、基准数和右数组
}
